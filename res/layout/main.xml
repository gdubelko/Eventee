<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TabHost
        android1:id="@+id/tabhost"
        android1:layout_width="0dip"
        android1:layout_height="match_parent"
        android1:layout_weight="1" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >
           

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <!-- TAB1: Exchange********************************************************** -->
                <LinearLayout
                    android1:id="@+id/Exchange"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:baselineAligned="false" >



                    <Button
                        android1:id="@+id/Button_Exchange"
                        style="@style/Button_Style"
                        android1:layout_width="0dip"
                        android1:layout_height="144dp"
                        android1:layout_gravity="center"
                        android1:layout_margin="25dp"
                        android1:layout_weight="0.40"
                        android1:background="@drawable/button_color"
                        android1:text="@string/exchange" />
                    
                </LinearLayout>
                <!-- TAB2: Contacts********************************************************** -->
                <LinearLayout
                    android1:id="@+id/Contacts"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >
                    
                    <ExpandableListView
            			android:id="@+id/Output_Contacts"
            			android:layout_width="0dip"
            			android:layout_height="wrap_content"
           				android:layout_weight="1" >
        			</ExpandableListView>
                    
                </LinearLayout>
				<!-- TAB3: Me***************************************************************** -->
                

                    <GridLayout
                        android1:id="@+id/Me"
            			android:layout_width="match_parent"
            			android:layout_height="match_parent"
            			android:columnCount="2" >

            			<TextView
            			    style="@style/Blue_Font"
                			android:id="@+id/Text_Name"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="left"
                			android:layout_row="0"
               				android:layout_rowSpan="2"
                			android:text="@string/name" />

            			<EditText
                			android:id="@+id/Input_Name"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="3"
                			android:ems="10"
                			android:inputType="textPersonName" >
  
            			</EditText>

            			<TextView
            			    style="@style/Blue_Font"
                			android:id="@+id/Text_Network"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_row="2"
                			android:text="@string/network" />

            			<Space
                			android:layout_width="1dp"
                			android:layout_height="21dp"
                			android:layout_column="0"
                			android:layout_row="0" />

            			<Space
                			android:layout_width="1dp"
                			android:layout_height="25dp"
                			android:layout_column="0"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="1" />

            			<Space
                			android:layout_width="21dp"
                			android:layout_height="1dp"
                			android:layout_column="0"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="0" />
						<EditText
                			android:id="@+id/Input_Network"
                			android:layout_width="match_parent"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_row="1"
                			android:ems="10" />
            

            			<TextView
            			    style="@style/Blue_Font"
                			android:id="@+id/Text_Email"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="left"
                			android:layout_row="4"
                			android:text="@string/email" />

            			<EditText
                			android:id="@+id/Input_Email"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="5"
                			android:ems="10"
               				android:inputType="textEmailAddress" />

            			<Space
                			android:layout_width="1dp"
                			android:layout_height="10dp"
                			android:layout_column="0"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="6" />

            			<TextView
            			    style="@style/Blue_Font"
                			android:id="@+id/Text_PhoneNumber"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="left"
                			android:layout_row="7"
                			android:text="@string/phone" />

            			<EditText
                			android:id="@+id/Input_PhoneNumber"
                			android:layout_column="0"
                			android:layout_columnSpan="2"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="8"
                			android:ems="10"
               				android:inputType="phone" />

            			<Space
                			android:layout_width="1dp"
                			android:layout_height="265dp"
                			android:layout_column="0"
                			android:layout_gravity="fill_horizontal"
                			android:layout_row="8" />
        			</GridLayout>                  
            	<!-- LINEARLAYOUT -->
            
            
            </FrameLayout>
        </LinearLayout>
	</TabHost>
</LinearLayout>
