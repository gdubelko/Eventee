<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TabHost
        android1:id="@+id/tabhost"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_weight="1" >

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="match_parent"
            android1:orientation="vertical" >
           

            <TabWidget
                android1:id="@android:id/tabs"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android1:id="@android:id/tabcontent"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent" >

                <LinearLayout
                    android1:id="@+id/Exchange"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:baselineAligned="false" >

                    <Button
                        android1:id="@+id/Button_Exchange"
                        android1:layout_width="wrap_content"
                        android1:layout_height="144dp"
                        android1:layout_gravity="top"
                        android1:layout_weight="0.40"
                        android1:text="Exchange" />
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/Contacts"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/Me"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" >
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>